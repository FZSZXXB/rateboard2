<script>
function transClass(str) {
  try {
    let gradeId = parseInt(str[0]);
    let ans = '';
    switch (gradeId) {
      case 1: ans += '高一'; break;
      case 2: ans += '高二'; break;
      case 3: ans += '高三'; break;
      default: throw new Error('年段配置错误');
    }
    str[0] = 0;
    let classId = parseInt(str.slice(1));
    ans += '（' + classId + '）班';
    return ans;
  } catch (e) {
    swal({
      title: "错误",
      icon: "error",
      text: e.message
    });
    console.log(e.message);
    return '&&&';
  }
}

